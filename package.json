{
  "name": "ecoframe",
  "private": true,
  "version": "0.1.0",
  "description": "Local AI chat terminal powered by LLMs",
  "author": "Tyler Williams",
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.echoframe.app",
    "productName": "EchoFrame",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "main.js",
      "package.json"
    ],
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "ELECTRON_DISABLE_SANDBOX=TRUE electron electron/main.cjs",
    "build:frontend": "vite build",
    "build:app": "npm run build:frontend && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "dotenv": "^17.2.0",
     "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.5"
  }
}
